{
  "name": "rest-auth-files",
  "version": "1.0.0",
  "description": "RESTful backend service built with Node.js and Express, featuring JWT-based authentication, MySQL integration, and secure file management with upload, download, and metadata handling",
  "type": "module",
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npx tsx watch src/server.ts",
    "dev:in-docker": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "test:in-docker": "docker-compose exec app npx vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push --verbose"
  },
  "author": "Maxim Polyakov",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.4",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
